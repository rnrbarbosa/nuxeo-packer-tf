{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "us-west-2",
    "nuxeo_version": "8.3",
    "subnet": "",
    "vpc": ""
  },

"builders": [{
  "type": "amazon-ebs",
  "access_key": "{{user `aws_access_key`}}",
  "secret_key": "{{user `aws_secret_key`}}",
  "region": "{{user `region`}}",
  "source_ami": "ami-b4a015d4",
  "instance_type": "t2.micro",
  "ssh_username": "ubuntu",
  "ami_name": "nuxeo-{{user `nuxeo_version`}} {{timestamp}}",
  "tags": {
    "OS": "Ubuntu",
    "Application": "nuxeo",
    "Release": "8.3"
  }
}],
  "provisioners": [
   {
      "type": "shell",
      "only": ["amazon-ebs"],
      "environment_vars": [
        "NUXEO_VERSION={{user `nuxeo_version`}}",
        "REGION={{user `region`}}"
    	],
      "scripts": [
            "scripts/nuxeo-aws.sh"
          ]
   }]
}
}
